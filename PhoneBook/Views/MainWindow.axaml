          ColumnDefinitions="16,*,24">
      <TextBox Grid.Column="1" Watermark="Текст для поиска" 
               Height="28"
               VerticalAlignment="Center"/>
    </Grid>


    <Grid Grid.Row="2" Background="#BDC3C7">
      
    </Grid>
  </Grid>
</Window>
